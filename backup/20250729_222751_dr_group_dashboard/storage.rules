rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Permitir acceso solo a usuarios autenticados
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Carpeta específica para comprobantes - solo el usuario propietario
    match /receipts/{userId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Carpeta para fotos de perfil - lectura pública, escritura solo del propietario
    match /profile-photos/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Carpeta para documentos de empresas - acceso basado en permisos
    match /company-documents/{companyId}/{fileName} {
      allow read, write: if request.auth != null;
      // TODO: Implementar verificación de permisos por empresa
    }
  }
}
