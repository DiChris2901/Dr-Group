{
  "name": "dr-group-dashboard",
  "version": "3.9.2",
  "description": "Dashboard de Control de Compromisos Financieros para DR Group",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "dev-local": "vite --host 0.0.0.0 --port 5173",
    "build": "vite build",
    "preview": "vite preview",
    "clean": "npm run clean || (rmdir /s /q dist 2>nul & rmdir /s /q node_modules\\.cache 2>nul)",
    "functions:install": "cd functions && npm install",
    "functions:serve": "cd functions && npm run serve",
    "functions:deploy": "cd functions && npm run deploy",
    "validate-tokens": "node src/utils/tokenValidator.js",
    "pre-commit": "npm run validate-tokens",
    "lint:tokens": "node src/utils/tokenValidator.js --fix"
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@google/generative-ai": "^0.24.1",
    "@mui/icons-material": "^5.15.0",
    "@mui/material": "^5.15.0",
    "@mui/x-date-pickers": "^8.11.1",
    "@mui/x-date-pickers-pro": "^8.11.1",
    "canvas": "^3.2.0",
    "chart.js": "^4.5.0",
    "chartjs-adapter-date-fns": "^3.0.0",
    "date-fns": "^4.1.0",
    "emoji-picker-react": "^4.14.0",
    "exceljs": "^4.4.0",
    "festivos-colombianos": "^1.1.0",
    "file-saver": "^2.0.5",
    "firebase": "^10.7.1",
    "firebase-admin": "^13.5.0",
    "framer-motion": "^11.15.0",
    "fuse.js": "^7.1.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "jszip": "^3.10.1",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^5.4.624",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.20.1",
    "react-window": "^1.8.11",
    "recharts": "^2.12.7",
    "twilio": "^5.9.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.3.4",
    "baseline-browser-mapping": "^2.9.19",
    "firebase-tools": "^14.15.1",
    "terser": "^5.44.0",
    "vite": "^5.4.11",
    "vite-plugin-pwa": "^1.0.3",
    "workbox-window": "^7.3.0"
  }
}
