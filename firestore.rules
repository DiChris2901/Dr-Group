rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // REGLAS DE PRODUCCI√ìN SEGURAS
    
    // Usuarios: Permitir lectura p√∫blica para preview de login, escritura solo autenticada
    match /users/{userId} {
      // Permitir lectura a cualquiera (necesario para preview de login)
      allow read: if true;
      
      // Permitir creaci√≥n, actualizaci√≥n y eliminaci√≥n solo a usuarios autenticados
      allow create, update, delete: if request.auth != null;
    }
    
    // Compromisos: Solo usuarios autenticados
    match /commitments/{commitmentId} {
      allow read, write: if request.auth != null;
    }
    
    // Empresas: Solo usuarios autenticados
    match /companies/{companyId} {
      allow read, write: if request.auth != null;
    }
    
    // Pagos: Solo usuarios autenticados
    match /payments/{paymentId} {
      allow read, write: if request.auth != null;
    }
    
    // Logs de actividad: Solo lectura para admins, escritura para usuarios autenticados
    match /activity_logs/{logId} {
      // Solo admins pueden leer logs de auditor√≠a
      allow read: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['ADMIN', 'SUPER_ADMIN'];
      
      // Cualquier usuario autenticado puede escribir logs (para registro de actividades)
      allow create: if request.auth != null;
      
      // No permitir actualizaci√≥n ni eliminaci√≥n (logs son inmutables)
      allow update, delete: if false;
    }
    
    // Logs de auditor√≠a: Solo usuarios autenticados (mantener compatibilidad)
    match /audit_logs/{logId} {
      allow read, write: if request.auth != null;
    }
    
    // Historial de cambios de salas: Solo usuarios autenticados pueden leer, solo sistema puede escribir
    match /sala_changes/{changeId} {
      // Cualquier usuario autenticado puede leer el historial
      allow read: if request.auth != null;
      
      // Solo usuarios autenticados pueden crear registros de cambios
      allow create: if request.auth != null;
      
      // No permitir actualizaci√≥n ni eliminaci√≥n (logs son inmutables)
      allow update, delete: if false;
    }
    
    // Salas: Solo usuarios autenticados
    match /salas/{salaId} {
      allow read, write: if request.auth != null;
    }

    // Aliases de sala (fusionar nombres hist√≥ricos): Solo usuarios autenticados
    match /sala_aliases/{empresaId} {
      allow read, write: if request.auth != null;
    }
    
    // Configuraciones: Solo usuarios autenticados
    match /settings/{settingId} {
      allow read, write: if request.auth != null;
    }
    
    // Notificaciones generales del sistema
    match /notifications/{notificationId} {
      // ‚úÖ SIMPLIFICADO: Permitir lectura a usuarios autenticados
      // (El frontend filtra por uid/userId)
      allow read: if request.auth != null;
      
      // Permitir crear a cualquier usuario autenticado
      allow create: if request.auth != null;
      
      // Permitir actualizar a usuarios autenticados (para marcar como le√≠da)
      allow update: if request.auth != null;
      
      // Permitir eliminar a usuarios autenticados
      allow delete: if request.auth != null;
    }
    
    // Versiones de la app (p√∫blicas para verificaci√≥n de actualizaciones)
    match /appVersions/{platform} {
      // ‚úÖ Lectura p√∫blica (necesario para verificar actualizaciones sin login)
      allow read: if true;
      
      // ‚úÖ Solo administradores pueden actualizar versiones
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['ADMIN', 'SUPER_ADMIN'];
    }
    
    // Configuraci√≥n de la app (p√∫blicas para verificaci√≥n de actualizaciones)
    match /appConfig/{document} {
      // ‚úÖ Lectura p√∫blica (necesario para verificar actualizaciones sin login)
      allow read: if true;
      
      // ‚úÖ Escritura p√∫blica (para herramientas de actualizaci√≥n sin auth)
      // NOTA: En producci√≥n, restringir a solo admins si es necesario
      allow write: if true;
    }
    
    // ========================================
    // üîê RBAC: Sistema de Permisos de App M√≥vil
    // ========================================
    
    // PermissionsApp: Permisos granulares de la app m√≥vil
    match /PermissionsApp/{uid} {
      // Lectura: Solo el propio usuario puede leer sus permisos
      allow read: if request.auth.uid == uid;
      
      // Escritura: Solo SUPERADMIN puede modificar permisos
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.appRole == 'SUPERADMIN';
    }

    // ========================================
    // üìã SISTEMA DE TAREAS DELEGADAS
    // ========================================
    
    // Tareas delegadas: Validaci√≥n seg√∫n participantes y permisos
    match /delegated_tasks/{taskId} {
      // Lectura: Solo usuarios con permiso ver_todas o que sean participantes
      allow read: if request.auth != null && (
        // Tiene permiso para ver todas las tareas
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions['tareas.ver_todas'] == true ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions.tareas == true ||
        // O es participante de la tarea
        request.auth.uid in resource.data.participantes
      );
      
      // Creaci√≥n: Solo usuarios con permiso tareas o tareas.crear
      allow create: if request.auth != null && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions.tareas == true ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions['tareas.crear'] == true
      );
      
      // Actualizaci√≥n: Solo creador, asignado o usuarios con permiso tareas
      allow update: if request.auth != null && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions.tareas == true ||
        resource.data.creadoPor.uid == request.auth.uid ||
        resource.data.asignadoA.uid == request.auth.uid
      );
      
      // Eliminaci√≥n: Solo creador o usuarios con permiso tareas
      allow delete: if request.auth != null && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions.tareas == true ||
        resource.data.creadoPor.uid == request.auth.uid
      );
      
      // Subcollection: Logs de progreso de tareas
      match /progressLogs/{logId} {
        // Lectura: Solo participantes de la tarea
        allow read: if request.auth != null && 
          request.auth.uid in get(/databases/$(database)/documents/delegated_tasks/$(taskId)).data.participantes;
        
        // Creaci√≥n: Solo el usuario asignado a la tarea
        allow create: if request.auth != null && 
          get(/databases/$(database)/documents/delegated_tasks/$(taskId)).data.asignadoA.uid == request.auth.uid;
        
        // Actualizaci√≥n: Solo el creador del log
        allow update: if request.auth != null && 
          resource.data.usuario.uid == request.auth.uid;
        
        // Eliminaci√≥n: Solo el creador del log
        allow delete: if request.auth != null && 
          resource.data.usuario.uid == request.auth.uid;
      }
    }

    // ========================================
    // üîê COLECCIONES EXPL√çCITAS (antes en catch-all)
    // ========================================

    // Sesiones activas: Tracking de sesiones de usuario
    match /activeSessions/{sessionId} {
      allow read, write: if request.auth != null;
    }

    // Alertas del sistema
    match /alerts/{alertId} {
      allow read, write: if request.auth != null;
    }

    // Configuraci√≥n de alertas: Solo el propietario
    match /alertsConfig/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Asistencias: Registro de jornada laboral (app m√≥vil)
    match /asistencias/{docId} {
      allow read, write: if request.auth != null;
    }

    // Eventos de calendario
    match /calendar_events/{eventId} {
      allow read, write: if request.auth != null;
    }

    // Empleados
    match /empleados/{docId} {
      allow read, write: if request.auth != null;
    }

    // Ingresos (nombre legacy)
    match /income/{docId} {
      allow read, write: if request.auth != null;
    }

    // Ingresos
    match /incomes/{docId} {
      allow read, write: if request.auth != null;
    }

    // Liquidaciones
    match /liquidaciones/{docId} {
      allow read, write: if request.auth != null;
    }

    // Liquidaciones por sala (snake_case)
    match /liquidaciones_por_sala/{docId} {
      allow read, write: if request.auth != null;
    }

    // Liquidaciones por sala (camelCase legacy)
    match /liquidacionesPorSala/{docId} {
      allow read, write: if request.auth != null;
    }

    // M√°quinas en cero: Datos pre-computados por empresa
    match /maquinas_en_cero/{docId} {
      allow read, write: if request.auth != null;
    }

    // Historial de login: Inmutable (solo crear)
    match /loginHistory/{docId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }

    // Notas
    match /notes/{noteId} {
      allow read, write: if request.auth != null;
    }

    // Novedades (app m√≥vil)
    match /novedades/{docId} {
      allow read, write: if request.auth != null;
    }

    // Usuarios pendientes de autorizaci√≥n: Solo admins
    match /pending_auth_users/{docId} {
      allow read, write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['ADMIN', 'SUPER_ADMIN'];
    }

    // M√©tricas de rendimiento del sistema
    match /performanceMetrics/{docId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }

    // Cuentas personales/bancarias
    match /personal_accounts/{docId} {
      allow read, write: if request.auth != null;
    }

    // Proveedores
    match /providers/{docId} {
      allow read, write: if request.auth != null;
    }

    // Solicitudes (RRHH)
    match /solicitudes/{docId} {
      allow read, write: if request.auth != null;
    }

    // N√≥mina: Liquidaciones de n√≥mina mensual
    match /nomina/{docId} {
      allow read, write: if request.auth != null;
    }

    // Configuraci√≥n de n√≥mina: SMMLV, aux. transporte por a√±o
    match /configuracion_nomina/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['ADMIN', 'SUPER_ADMIN'];
    }

    // Logs del sistema: Inmutables
    match /systemLogs/{docId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }

    // Tareas (sistema simple de tareas)
    match /tasks/{taskId} {
      allow read, write: if request.auth != null;
      
      // Subcollection: Logs de progreso
      match /progressLogs/{logId} {
        allow read, write: if request.auth != null;
      }
    }

    // Configuraci√≥n de usuario: Solo el propietario
    match /userSettings/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
      
      // Subcollection: Taskbar favorites
      match /{subcollection}/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
    }

    // ========================================
    // Configuraci√≥n de perfil de usuario
    // ========================================
    match /userProfileSettings/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // ========================================
    // Configuraci√≥n global del sistema (SMMLV, etc.)
    // ========================================
    match /system_config/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Solo admins en la pr√°ctica (validado en frontend)
    }

    // Subcollection settings de usuarios (preferencias de notificaciones, etc.)
    // Read: cualquier autenticado (necesario para notifyAdminsWorkEvent que lee prefs de todos)
    // Write: solo el due√±o
    match /users/{userId}/settings/{settingId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Device tokens para push notifications (cada usuario escribe su propio token)
    match /deviceTokens/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // ========================================
    // üö´ DENY-ALL: Cualquier colecci√≥n no listada
    // ========================================

    // Estad√≠sticas pre-calculadas del sistema (escriben solo Cloud Functions via Admin SDK)
    match /system_stats/{docId} {
      allow read: if request.auth != null;
      allow write: if false; // Solo Cloud Functions (Admin SDK bypassa rules)
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}