rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // REGLAS DE PRODUCCI√ìN SEGURAS
    
    // Usuarios: Permitir lectura p√∫blica para preview de login, escritura solo autenticada
    match /users/{userId} {
      // Permitir lectura a cualquiera (necesario para preview de login)
      allow read: if true;
      
      // Permitir creaci√≥n, actualizaci√≥n y eliminaci√≥n solo a usuarios autenticados
      allow create, update, delete: if request.auth != null;
    }
    
    // Compromisos: Solo usuarios autenticados
    match /commitments/{commitmentId} {
      allow read, write: if request.auth != null;
    }
    
    // Empresas: Solo usuarios autenticados
    match /companies/{companyId} {
      allow read, write: if request.auth != null;
    }
    
    // Pagos: Solo usuarios autenticados
    match /payments/{paymentId} {
      allow read, write: if request.auth != null;
    }
    
    // Logs de actividad: Solo lectura para admins, escritura para usuarios autenticados
    match /activity_logs/{logId} {
      // Solo admins pueden leer logs de auditor√≠a
      allow read: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['ADMIN', 'SUPER_ADMIN'];
      
      // Cualquier usuario autenticado puede escribir logs (para registro de actividades)
      allow create: if request.auth != null;
      
      // No permitir actualizaci√≥n ni eliminaci√≥n (logs son inmutables)
      allow update, delete: if false;
    }
    
    // Logs de auditor√≠a: Solo usuarios autenticados (mantener compatibilidad)
    match /audit_logs/{logId} {
      allow read, write: if request.auth != null;
    }
    
    // Historial de cambios de salas: Solo usuarios autenticados pueden leer, solo sistema puede escribir
    match /sala_changes/{changeId} {
      // Cualquier usuario autenticado puede leer el historial
      allow read: if request.auth != null;
      
      // Solo usuarios autenticados pueden crear registros de cambios
      allow create: if request.auth != null;
      
      // No permitir actualizaci√≥n ni eliminaci√≥n (logs son inmutables)
      allow update, delete: if false;
    }
    
    // Salas: Solo usuarios autenticados
    match /salas/{salaId} {
      allow read, write: if request.auth != null;
    }
    
    // Configuraciones: Solo usuarios autenticados
    match /settings/{settingId} {
      allow read, write: if request.auth != null;
    }
    
    // ========================================
    // SISTEMA DE CHAT
    // ========================================
    
    // Conversaciones: Solo participantes pueden leer/escribir
    match /conversations/{conversationId} {
      // ‚úÖ SIMPLIFICADO: Permitir lectura a usuarios autenticados
      // (Frontend filtra conversaciones donde el usuario es participante)
      allow read: if request.auth != null;
      
      // Permitir creaci√≥n si el usuario es participante
      allow create: if request.auth != null 
                    && request.auth.uid in request.resource.data.participantIds;
      
      // Permitir actualizaci√≥n a usuarios autenticados (para unreadCount)
      allow update: if request.auth != null;
      
      // No permitir eliminaci√≥n (conversaciones permanentes)
      allow delete: if false;
    }
    
    // Mensajes: Solo participantes de la conversaci√≥n
    match /messages/{messageId} {
      // ‚úÖ SIMPLIFICADO: Permitir lectura a usuarios autenticados
      // (Frontend filtra por conversaci√≥n)
      allow read: if request.auth != null;
      
      // Permitir creaci√≥n si el senderId es el usuario actual
      allow create: if request.auth != null 
                    && request.resource.data.senderId == request.auth.uid;
      
      // Permitir actualizaci√≥n solo al remitente (para editar mensajes)
      allow update: if request.auth != null 
                    && resource.data.senderId == request.auth.uid;
      
      // Permitir eliminaci√≥n solo al remitente
      allow delete: if request.auth != null 
                    && resource.data.senderId == request.auth.uid;
    }
    
    // Notificaciones de chat: Solo el destinatario
    match /chat_notifications/{notifId} {
      // Solo el destinatario puede leer sus notificaciones
      allow read: if request.auth != null 
                  && resource.data.userId == request.auth.uid;
      
      // Cualquier usuario autenticado puede crear notificaciones
      allow create: if request.auth != null;
      
      // Solo el destinatario puede actualizar (marcar como le√≠do)
      allow update: if request.auth != null 
                    && resource.data.userId == request.auth.uid;
      
      // Solo el destinatario puede eliminar
      allow delete: if request.auth != null 
                    && resource.data.userId == request.auth.uid;
    }

    // Notificaciones generales del sistema
    match /notifications/{notificationId} {
      // ‚úÖ SIMPLIFICADO: Permitir lectura a usuarios autenticados
      // (El frontend filtra por uid/userId)
      allow read: if request.auth != null;
      
      // Permitir crear a cualquier usuario autenticado
      allow create: if request.auth != null;
      
      // Permitir actualizar a usuarios autenticados (para marcar como le√≠da)
      allow update: if request.auth != null;
      
      // Permitir eliminar a usuarios autenticados
      allow delete: if request.auth != null;
    }
    
    // Versiones de la app (p√∫blicas para verificaci√≥n de actualizaciones)
    match /appVersions/{platform} {
      // ‚úÖ Lectura p√∫blica (necesario para verificar actualizaciones sin login)
      allow read: if true;
      
      // ‚úÖ Solo administradores pueden actualizar versiones
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['ADMIN', 'SUPER_ADMIN'];
    }
    
    // Configuraci√≥n de la app (p√∫blicas para verificaci√≥n de actualizaciones)
    match /appConfig/{document} {
      // ‚úÖ Lectura p√∫blica (necesario para verificar actualizaciones sin login)
      allow read: if true;
      
      // ‚úÖ Escritura p√∫blica (para herramientas de actualizaci√≥n sin auth)
      // NOTA: En producci√≥n, restringir a solo admins si es necesario
      allow write: if true;
    }
    
    // ========================================
    // üîê RBAC: Sistema de Permisos de App M√≥vil
    // ========================================
    
    // PermissionsApp: Permisos granulares de la app m√≥vil
    match /PermissionsApp/{uid} {
      // Lectura: Solo el propio usuario puede leer sus permisos
      allow read: if request.auth.uid == uid;
      
      // Escritura: Solo SUPERADMIN puede modificar permisos
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.appRole == 'SUPERADMIN';
    }
    
    // Regla por defecto para cualquier otra colecci√≥n: Solo usuarios autenticados
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}