rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir acceso solo a usuarios autenticados
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Reglas específicas para usuarios
    match /users/{userId} {
      // Permitir lectura propia para usuarios autenticados
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Permitir lectura de datos básicos para preview en login (solo name, email, photoURL)
      allow read: if true;
    }
    
    // Reglas específicas para compromisos
    match /commitments/{commitmentId} {
      allow read, write: if request.auth != null;
    }
    
    // Reglas específicas para empresas
    match /companies/{companyId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}