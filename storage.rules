rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Permitir acceso solo a usuarios autenticados
    // ✅ IMPORTANTE: 'list' permite listAll() y estadísticas de storage
    match /{allPaths=**} {
      allow read, write, list: if request.auth != null;
    }
    
    // Logos públicos (necesarios para pantalla de login)
    match /logos/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && 
        request.auth.token.email in [
          'admin@drgroup.com', 
          'diego@drgroup.com',
          'daruedagu@gmail.com'
        ];
    }
    
    // Carpeta específica para comprobantes - ADMINISTRADORES pueden ver todos los archivos
    match /receipts/{userId}/{fileName} {
      allow read, write, list: if request.auth != null && 
        (request.auth.uid == userId || 
         request.auth.token.email in [
           'admin@drgroup.com', 
           'diego@drgroup.com',
           'daruedagu@gmail.com'
         ]);
    }
    
    // Carpeta para fotos de perfil - lectura pública, escritura solo del propietario
    match /profile-photos/{userId}/{fileName} {
      allow read, list: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Carpeta para documentos de empresas - acceso basado en permisos
    match /company-documents/{companyId}/{fileName} {
      allow read, write, list: if request.auth != null;
      // TODO: Implementar verificación de permisos por empresa
    }
    
    // ✅ Reglas para carpetas adicionales (liquidaciones, payments, commitments)
    match /liquidaciones/{allPaths=**} {
      allow read, write, list: if request.auth != null;
    }
    
    match /payments/{allPaths=**} {
      allow read, write, list: if request.auth != null;
    }
    
    match /commitments/{allPaths=**} {
      allow read, write, list: if request.auth != null;
    }
  }
}
