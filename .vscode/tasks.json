{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev",
      "type": "shell",
      "command": "source ~/.zshrc && npm run dev",
      "group": "build",
      "isBackground": true,
      "problemMatcher": ["$tsc"],
      "options": {
        "env": {
          "NODE_ENV": "development",
          "FORCE_COLOR": "1"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "build",
      "type": "shell",
      "command": "source ~/.zshrc && npm run build",
      "group": "build",
      "problemMatcher": ["$tsc"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "preview",
      "type": "shell",
      "command": "source ~/.zshrc && npm run preview",
      "group": "build",
      "isBackground": true,
      "dependsOn": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "source ~/.zshrc && (npm run clean || rm -rf dist node_modules/.cache)",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "lint",
      "type": "shell",
      "command": "source ~/.zshrc && npm run lint",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "Start Mobile App (Background)",
      "type": "shell",
      "command": "source ~/.zshrc && cd mobile && npx expo start --clear",
      "isBackground": true,
      "group": "test",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "clear": true
      }
    }
  ]
}
